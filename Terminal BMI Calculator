print("Welcome to the BMI Calculator!")

kg = 0
lbs = 0
m = 0
inches = 0
bmi = 0

imp_met = input("If you want to put in your measurements in imperial units (inches and pounds) type imperial, if you want to put in your measurements in metric units (metres and kilograms) type metric. ")
if imp_met == 'imperial':
    print("You have chosen imperial.")
    impcalc()
    meanings()
    disclaimer()
elif imp_met == 'metric':
    print("You have chosen metric. ")
    metcalc()
    meanings() 
    disclaimer()
def impcalc():
    inches = float(input("Enter your height in inches? "))
    lbs = float(input("Enter your weight in pounds. "))
    bmi = lbs * 703 / (inches ** 2)

def metcalc():
    m = float(input("Enter your height in metres. "))
    kg = float(input("Enter your weight in kilograms. "))
    bmi = kg / (m**2)

def meanings():
    if bmi < 18.5:
        print("If your lean mass to fat mass is average, you are underweight. ")
    elif bmi >= 18.5 and bmi <= 24.9:
        print("If your lean mass to fat mass is average, you are of normal weight. ")
    elif bmi >= 25 and bmi <= 29.9:
        print("If your lean mass to fat mass is average, you are of overweight weight. ")
    elif bmi >= 30:
        print("If your lean mass to fat mass is average, you are of an obese weight. ")

def disclaimer():
    print("The BMI test is not a fully accurate test and is meant more as a guide. This test does not take into account the percentage of your weight which is lean mass and thus may be inaccurate and actually lists LeBron James as obese, when in reality he is very healthy. ")